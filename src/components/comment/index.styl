.v-comment_list-item
  margin-bottom 24px

.v-comment_head
  display flex
  align-items center

.v-comment_avatar
  width 34px
  height @width
  border-radius (@width / 2)
  background-position center
  background-size cover
  background-repeat no-repeat

.v-comment_author
  margin-left 10px
  color $color-theme

.v-comment_time
  margin-left 5px
  color $color-assist
  font-size $font-size-assist

.v-comment_body
  padding-left 44px
  color $color-title

.v-comment_foot
  margin-top 10px
  padding-left 44px
  a
    color $color-assist

/* 评论输入框 */
.v-comment_form
  margin 10px 0
.v-comment_form-foot
  text-align right
  padding-top 8px
  .v-btn
    margin-left 10px
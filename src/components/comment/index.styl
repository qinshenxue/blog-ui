.v-comment_list-item
    margin-bottom 24px

.v-comment_head
    display flex
    align-items center

.v-comment_avatar
    flex-shrink 0
    width 34px
    height @width
    border-radius (@width / 2)
    background-position center
    background-size cover
    background-repeat no-repeat
    line-height @width
    background-color $color-logo
    color #fff
    text-align center
    font-size 16px
    font-weight bold

.v-comment_author
    color #aaa
    margin-left 10px

.v-comment_name
    font-style normal
    color $color-logo
    font-weight bold

.v-comment_time
    margin-left 5px
    color $color-assist
    font-size $font-size-assist

.v-comment_body
    padding-left 44px
    color $color-body

.v-comment_foot
    margin-top 10px
    padding-left 44px
    a
        color $color-assist

.v-comment_form
    margin 10px 0

.v-comment_form-foot
    text-align right
    padding-top 8px
    .v-btn
        margin-left 10px

.vui-checkbox 
    cursor: pointer;
    .vui-checkbox-input 
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 1px solid #ccc;
        position: relative;
        vertical-align: middle;
        line-height: 1;
        .icon-check 
            position: absolute;
            width: 14px;
            height: 14px;
            top:-1px;
            left:0;
            display: none;
            fill: #fff;
        
    
    .vui-checkbox-label 
        display: inline-block;
        vertical-align: middle;

    &.checked 
        .vui-checkbox-input 
            background: $color-theme;
            border-color: $color-theme;
            .icon-check 
                display: block;
    input 
        opacity: 0;
        outline: none;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: 0;
    

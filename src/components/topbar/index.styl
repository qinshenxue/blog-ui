$topbar-zindex = $zindex['topbar']
.v-topbar
    background #fff
    height 100%
    .container
        display flex
        height @height
    .v-icon_more
        display none

.v-topbar_left
    display flex
    flex 1

.v-topbar_right
    display: flex
    align-items center
    .v-icon_more
        width 24px
        cursor pointer
    .v-dropdown_menu
        display flex
        flex-direction column
        > *
            display flex
            align-items center
            padding 0 15px

.v-topbar_links
    display flex
    align-items center
    height 100%
    a
        color $color-body
        text-decoration none
        &:hover
            color $color-theme
    > *
        display flex
        align-items center
        height @height
        padding 0 15px
        margin 0 10px
        position relative
        &.active
            color $color-theme
            &:after
                position absolute
                bottom 0
                content ''
                left 0
                width 100%
                border-bottom 2px solid $color-theme

.v-topbar_logo
    display flex
    align-items center
    padding 0 20px
    img
        max-height 30px

.v-topbar_right-cover
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background rgba(#000, .5)
    display none
    z-index ($topbar-zindex - 1)

@media (max-width 500px)
    .v-topbar_right
        .v-icon_more
            display block
            position fixed
            right 18px
            top 18px
            z-index ($topbar-zindex + 1)

    .v-topbar_links
        padding-top 60px
        min-width 120px
        position fixed
        top 0
        bottom 0
        right 0
        z-index $topbar-zindex
        height auto
        flex-direction column
        background #fff
        display none
        > *
            height 50px

    .side
        .v-topbar_links
            display flex
        .v-icon_more
            fill $color-theme
        .v-topbar_right-cover
            display block